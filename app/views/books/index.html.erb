<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>index of page</h2>
      <table>
        <thead>
          <tr>
            <th>title</th>
            <th>body</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show", book_path(book.id),class:"btn btn-success" %></td>
            <td><%= link_to "Edit",edit_book_path(book.id),class:"btn btn-primary" %></td>
            <td><%= link_to "Destroy",book_path(book.id), method: :delete,class:"btn btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class:"create_book">
        <h2>Create Book</h2>
        <%= form_with model:@book, local:true do |f| %>
        <% end %>
      </div>
    </div>
  </div>
</div>